<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.john.ghidturistic.Activities.ProfileActivity">
    
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <ImageView
        android:id="@+id/account_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/account_image_view"
        android:textSize="@dimen/text_large"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:hint="email"/>

    <TextView
        android:id="@+id/account_type_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/email_text_view"
        android:textSize="@dimen/text_large"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:hint="account type"/>

    <Button
        android:id="@+id/logout_button"
        android:text="@string/logout_string"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/account_type_text_view"/>

</RelativeLayout>
